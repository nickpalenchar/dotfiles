# Basic zsh configuration
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

# History configuration
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt appendhistory
setopt sharehistory
setopt incappendhistory

# Basic options
setopt autocd
setopt extendedglob
setopt nomatch
setopt notify
unsetopt beep

# Key bindings
bindkey -e

# Completion system
autoload -Uz compinit
compinit

# Colors
autoload -Uz colors
colors

# Prompt
PS1='%F{green}%n@%m%f:%F{blue}%~%f$ '

# Aliases
alias ll='ls -la'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Git aliases
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --oneline'
alias gd='git diff'

# Development aliases
alias python='python3'
alias pip='pip3'

# Environment variables
export EDITOR=vim
export VISUAL=vim
export PAGER=less

# Language settings
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8 